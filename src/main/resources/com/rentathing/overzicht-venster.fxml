         <children>
            <TableView fx:id="productenTable" layoutX="101.0" layoutY="71.0" prefHeight="259.0" prefWidth="257.0">
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <columns>
                  <TableColumn fx:id="productenColumn" prefWidth="75.0" text="Product" />
                  <TableColumn fx:id="beschrijvingColumn" prefWidth="75.0" text="Beschrijving" />
